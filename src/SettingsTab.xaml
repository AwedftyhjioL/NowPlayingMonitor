<UserControl x:Class="NowPlayingMonitor.SettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:NowPlayingMonitor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <StackPanel Margin="30,30,30,30">

        <DockPanel Margin="0,0,0,10">
            <TextBlock Text="{x:Static local:Strings.Silent_Start}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <mah:ToggleSwitch x:Name="ToggleSilentStart" IsOn="{Binding IsStartWithMinimize, Mode=TwoWay}" HorizontalAlignment="Right"/>
        </DockPanel>
        <DockPanel Margin="0,0,0,10">
            <TextBlock Text="{x:Static local:Strings.Always_Minimize_To_Tray}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <mah:ToggleSwitch x:Name="ToggleAlwaysMinimizeToTray" IsOn="{Binding IsMinimizeToTrayWhenClosed, Mode=TwoWay}" HorizontalAlignment="Right"/>
        </DockPanel>

    </StackPanel>

    
</UserControl>
